@model TotalWarDLA.Models.Formation

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Formation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateFormation">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NumberSoldiers" class="control-label"></label>
                <input asp-for="NumberSoldiers" class="form-control" />
                <span asp-validation-for="NumberSoldiers" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartingFormationValue" class="control-label"></label>
                <input asp-for="StartingFormationValue" class="form-control" />
                <span asp-validation-for="StartingFormationValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FormationName" class="control-label"></label>
                <input asp-for="FormationName" class="form-control" />
                <span asp-validation-for="FormationName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdSoldier" class="control-label"></label>
                <select asp-for="IdSoldier" class ="form-control" asp-items="ViewBag.IdSoldier"></select>
            </div>
            <div class="form-group">
                <label asp-for="IdHorse" class="control-label"></label>
                <select asp-for="IdHorse" class ="form-control" asp-items="ViewBag.Formations"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="IndexFormation">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
