@model TotalWarDLA.Models.Pagination.PageModel<Formation>;

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-action="CreateFormation">Create New</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            @*<th>
                    @Html.DisplayNameFor(model => model.NumberSoldiers)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartingFormationValue)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FormationName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IdHorseNavigation)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IdSoldierNavigation)
                </th>*@
            <th>Number Soldiers</th>
            <th>Starting Formation Value</th>
            <th>Formation Name</th>
            <th>Id Horse Navigation</th>
            <th>Id Soldiers Navigation</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberSoldiers)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartingFormationValue)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FormationName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdHorseNavigation.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdSoldierNavigation.Id)
                </td>
                <td>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="EditFormation" asp-route-id="@item.Id">Edit</a>
                    }
                    <a asp-action="DetailsFormation" asp-route-id="@item.Id">Details</a>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="DeleteFormation" asp-route-id="@item.Id">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
@{
    if (Model.HasPrevios)
    {
        <a asp-action="IndexFormation" asp-route-CurrentPage="@(Model.CurrentPage - 1)" class="btn btn-default">previos</a>
    }
    if (Model.HasNext)
    {
        <a asp-action="IndexFormation" asp-route-CurrentPage="@(Model.CurrentPage + 1)" class="btn btn-default"> Next</a>
    }
}