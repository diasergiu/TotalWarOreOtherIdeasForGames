            <th>Speed</th>
            <th>Acuracy</th>
            <th>Soldier Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AttackSkilll)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DefenceSkill)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Stamina)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Speed)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Acuracy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SoldierName)
                </td>
                <td>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="EditSoldierModel" asp-route-id="@item.Id">Edit</a>
                    }
                    <a asp-action="DetailsSoldierModel" asp-route-id="@item.Id">Details</a>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="DeleteSoldierModel" asp-route-id="@item.Id">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
@{
    if (Model.HasPrevios)
    {
        <a asp-action="IndexSoldierModel" asp-route-CurrentPage="@(Model.CurrentPage - 1)" class="btn btn-default">previos</a>
    }
    if (Model.HasNext)
    {
        <a asp-action="IndexSoldierModel" asp-route-CurrentPage="@(Model.CurrentPage + 1)" class="btn btn-default"> Next</a>
    }
}