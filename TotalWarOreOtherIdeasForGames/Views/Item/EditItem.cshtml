@model TotalWarOreOtherIdeasForGames.ViewModel.ItemViewModel

@{
    ViewData["Title"] = "Edit";
}
<script type="text/javascript" src="~/Views/Style/js/Select.js">
    MarkCommonElements(@Model.Formations_, "#Formations");
</script>
<h1>Edit</h1>

<h4>Item</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-action="EditItem">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Item_.Id" />
            <div class="form-group">
                <label asp-for="Item_.StaminaCost" class="control-label"></label>
                <input asp-for="Item_.StaminaCost" class="form-control" />
                <span asp-validation-for="Item_.StaminaCost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item_.SpeedCost" class="control-label"></label>
                <input asp-for="Item_.SpeedCost" class="form-control" />
                <span asp-validation-for="Item_.SpeedCost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item_.ItemName" class="control-label"></label>
                <input asp-for="Item_.ItemName" class="form-control" />
                <span asp-validation-for="Item_.ItemName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Formations_" class="control-label"></label>
                <select asp-for="Formations_" class="form-control" asp-items="ViewBag.Formations"></select>
            </div>
            <div class="form-group">
                <label asp-for="ImageFile" class="control-label"></label>
                <input asp-for="ImageFile" accept="image/" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="IndexItem">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
