@model IEnumerable<TotalWarDLA.Models.Item>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="CreateItem">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StaminaCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SpeedCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StaminaCost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SpeedCost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemName)
            </td>
            <td>
                <a asp-action="EditItem" asp-route-id="@item.IdItem">Edit</a> |
                <a asp-action="DetailsItem" asp-route-id="@item.IdItem">Details</a> |
                <a asp-action="DeleteItem" asp-route-id="@item.IdItem">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
