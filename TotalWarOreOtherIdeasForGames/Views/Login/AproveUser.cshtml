@model TotalWarDLA.Models.User

@{
    ViewData["Title"] = "AproveUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>AproveUser</h1>

<h4>User</h4>
<hr />
<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayFor(model => model.UserName)
    </dt>
    <dt class="Col-sm-10">
        @Html.DisplayFor(model => model.Email)
    </dt>
</dl>
<div class="row">
    <div class="col-md-4">
        <form asp-action="AproveUser">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdUser" />
            <div class="form-group">
                <input type="hidden" asp-for="UserName" class="form-control" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Password" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="UserType" class="control-label"></label>
                <select asp-for="UserType" asp-items="Html.GetEnumSelectList<TotalWarDLA.Models.Enum.UserType>()" class="form-control"></select>
                <span asp-validation-for="UserType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
