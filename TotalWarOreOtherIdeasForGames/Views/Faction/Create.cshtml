@model TotalWarDLA.ViewModel.FactionFormationViewModel;

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<h4>Faction</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="faction.FactionName" class="control-label"></label>
                <input asp-for="faction.FactionName" class="control-label" />
                <span asp-validation-for="faction.FactionName"></span>
            </div>
            <div class="form-group">
                <label asp-for="faction.FactionDescription" class="control-label"></label>
                <input asp-for="faction.FactionDescription" class="form-group" />
                <span asp-validation-for="faction.FactionDescription"></span>
            </div>
            <div class="form-group">
                <-- how is this gonna be send -->
                <select asp-for="ListFormations" multiple>
                    @foreach(Formation formation in Model.ListFormations)
                    {
                        <option asp-for="formation">@formation.FormationName</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="index">Back to list</a>
</div>
